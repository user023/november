//find height of a tree nrec;
//10:26
struct node
{
    int data;
    node*left;
    node*right;
};
node*NewNode(int data)
{
    //node*temp;
    node *temp=new node();
    temp->data=data;
    temp->left=NULL;
    temp->right=NULL;
    return temp;
}

void vertical_sum(node*root,map<int,int>&mp,int col)
{
    mp[col]+=root->data;
    if(root->left!=NULL)
    {
        vertical_sum(root->left,mp,col-1);
    }
    if(root->right!=NULL)
    {
        vertical_sum(root->right,mp,col+1);
    }
}
int main()
{

    node *A=NewNode(1);
    A->left=NewNode(2);
    A->left->left=NewNode(4);
    A->left->right=NewNode(5);
    A->right=NewNode(3);
    A->right->left=NewNode(6);
    A->right->right=NewNode(7);
    map<int,int>mp;
    vertical_sum(A,mp,0);
    for(map<int,int>::iterator it=mp.begin();it!=mp.end();it++)
    {
        cout<<it->second<<" ";
    }
    return 0;
}
